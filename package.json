{
  "name": "smig",
  "version": "0.0.5",
  "description": "Automatic SurrealDB migrations with a concise DSL",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "smig": "dist/cli.js"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist && node scripts/post-build.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome check --write src/",
    "lint:examples": "bunx @biomejs/biome check examples/",
    "format:examples": "bunx @biomejs/biome check --write examples/",
    "lint:tests": "bunx @biomejs/biome check tests/",
    "format:tests": "bunx @biomejs/biome check --write tests/",
    "clean": "rm -rf dist .vite",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "surrealdb",
    "migration",
    "schema",
    "database",
    "typescript",
    "cli",
    "graph",
    "nosql"
  ],
  "author": "Chris Harris",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "dedent": "^1.7.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "ora": "^9.0.0",
    "surrealdb": "^1.3.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kathysledge/smig.git"
  },
  "bugs": {
    "url": "https://github.com/kathysledge/smig/issues"
  }
}
